{% set prefix = 'titled-content' %}
{% set classes = [
  prefix,
  prefix ~ '--' ~ variant,
] %}

<div {{ attribs.addClass(classes) }}>
  <div class="border-solid border-t border-b-gray-lightgray my-7"></div>
  <div class="{{ prefix }}-title border-solid border-b border-y-gray-silver text-lg font-medium">{{ title }}</div>
  <div class="{{ prefix }}-content py-6 mb-3 border-solid border-b border-y-gray-silver border-x-0"> {{ content }} </div>
</div>
