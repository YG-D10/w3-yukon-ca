{% set prefix = 'video' %}
{% set classes = [
  prefix
] %}

{% set attributes = attributes.addClass(classes) %}

{% set content %}
  <div class="container">
    <div class="title">
      <h2>{{ title }}</h2>
    </div>

    <div class="video">{{ video }}</div>

    {% if caption|render %}
      <div class="caption">{{ caption }}</div>
    {% endif %}
  </div>
{% endset %}

{{ pattern('section', {
  content: content,
  attribs: attributes,
}, 'default') }}
